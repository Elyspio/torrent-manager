{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./build",
		"target": "ES2020",
		"lib": ["es2016", "dom", "ESNext"],
		"typeRoots": ["./node_modules/@types"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": false,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules", "./public", "dist", "test"]
}
